{
  "name": "danger",
  "version": "0.0.1",
  "description": "Automate your culture",
  "main": "distribution/danger.js",
  "bin": {
    "danger": "distribution/commands/runner.js"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/distribution/"
    ]
  },
  "scripts": {
    "test": "jest",
    "testwatch": "jest --watch",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint ./source",
    "fixlint": "eslint ./source --fix",
    "build": "babel source --out-dir distribution --source-maps",
    "buildwatch": "babel source --watch --out-dir distribution"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danger/danger-js.git"
  },
  "keywords": [
    "danger",
    "ci"
  ],
  "author": "Orta Therox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danger/danger-js/issues"
  },
  "homepage": "https://github.com/danger/danger-js#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^6.0.0-beta.3",
    "eslint-plugin-flowtype": "^2.20.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "flow-bin": "^0.32.0",
    "jest-cli": "^16.0.0",
    "@types/commander": "^2.3.30",
    "@types/node-fetch": "^0.0.4"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "node-fetch": "^1.6.3"
  }
}
